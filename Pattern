#include<stdlib.h>
int main()
{
    int i,j,n;
    printf("Enter the limit:-");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
      for(j=0;j<i;j++)
      {
          printf("* ");
          
      }
      printf("\n");
    }
    
    
    for(i=1;i<=n;i++)
    {
      for(j=i;j<=n-1;j++)
      {
          printf("* ");
      }
      printf("\n");
    }
    return 0;
}
