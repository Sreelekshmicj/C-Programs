#include<stdio.h>
int main()
{
      float a,b,c,sum,avg;
     
      printf("\nEnter First Number: ");
      scanf("%f", &a);
      printf("\nEnter Second Number: ");
      scanf("%f",&b);
      printf("\nEnter Third Number: ");
      scanf("%f",&c);
       
      // For Sum 
       
      sum=a+b+c;
      printf("\nsum: %.2f",sum);
       
      // For Average
       
      avg=sum/3.0;
      printf("\nAverage of Three Numbers : %.2f",avg);
      return 0;
}
